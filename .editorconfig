# See http://EditorConfig.org

# top-most EditorConfig file
root = true

# PSR1 charset
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# space between line
[*.php]
trim_trailing_whitespace = true
insert_final_newline = true

# PSR2 space indentation
[*.php]
indent_style = space
indent_size = 4

# config files
[{*.json,.*.yml}]
indent_style = space
indent_size = 4